
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <body>
            <input type="text" id="username" placeholder="name">
            <input type="password" id="password" placeholder="password">
            <button onclick="MakeAjaxRequest(document.getElementById('username').value,document.getElementById('password').value)"> click to submit</button>
    <script src="/lib/jquery/dist/jquery.js"></script>
        <script>
            function MakeAjaxRequest(username,password)
            {
                console.log("i was here")
                var Credentials = { password: password , name: username};
                $.ajax({
                    type:"POST",
                    url:"/Home/HandleInput",
                    data:{details: Credentials},   
                    success:function (response)
                    {
                        if (response == "/Home/LoggedOnPage")
                        {
                            window.location = response
                        }
                        else console.log(response)

                    }
                })
                
            }
        </script>
    </body>
</html>

